package com.itheima.wechat;

import android.app.Fragment;
import android.os.Bundle;
import android.view.LayoutInflater;
import android.view.View;
import android.view.View.OnClickListener;
import android.view.ViewGroup;
import android.widget.Button;
import android.widget.Toast;

/**
 * 2017年2月11日
 * 
 * xfhy
 * 
 * TODO
 */
public class DiscoverFragment extends Fragment {

	@Override
	public View onCreateView(LayoutInflater inflater, ViewGroup container,
			Bundle savedInstanceState) {
		View view = inflater.inflate(R.layout.fragment_wx, null);
		
		Button bt_test = (Button) view.findViewById(R.id.bt_test);
		
		bt_test.setOnClickListener(new OnClickListener() {
			
			@Override
			public void onClick(View v) {
				Toast.makeText(getActivity(), "哈哈,我被点击啦", Toast.LENGTH_SHORT).show();
			}
		});
		
		return view;
	}
	
}
